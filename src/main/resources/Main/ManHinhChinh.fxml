<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<ScrollPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.ManHinhChinh_Controller">
   <AnchorPane styleClass="AnchorPane" stylesheets="@../styles/Style.css">
      <VBox>
         <HBox alignment="CENTER_RIGHT" spacing="24.0" style="-fx-background-color: #FFF;">
            <padding>
               <Insets bottom="8.0" left="24.0" right="24.0" top="8.0"/>
            </padding>
            <HBox style="-fx-background-color: #FFF;" HBox.hgrow="ALWAYS">
               <Label style="-fx-font-weight: bold;" text="QUẢN LÝ PHÒNG TRỌ">
                  <HBox.margin>
                     <Insets left="24.0" top="12.0"/>
                  </HBox.margin>
               </Label>
            </HBox>
            <Button mnemonicParsing="false" styleClass="button_navbar" stylesheets="@../styles/Style.css"
                    text="Quản lý phòng">
               <graphic>
                  <FontAwesomeIconView glyphName="HOME"/>
               </graphic>
            </Button>
            <Button mnemonicParsing="false" styleClass="button_navbar" stylesheets="@../styles/Style.css"
                    text="Thanh toán hóa đơn">
               <graphic>
                  <FontAwesomeIconView glyphName="MONEY"/>
               </graphic>
            </Button>
            <Button mnemonicParsing="false" styleClass="button_navbar" stylesheets="@../styles/Style.css"
                    text="Doanh thu">
               <graphic>
                  <FontAwesomeIconView glyphName="CALENDAR"/>
               </graphic>
            </Button>
         </HBox>
         <HBox alignment="CENTER" spacing="24.0" VBox.vgrow="ALWAYS">
            <padding>
               <Insets bottom="24.0" left="24.0" right="24.0" top="24.0"/>
            </padding>
            <VBox spacing="12.0">
               <HBox alignment="CENTER_LEFT" spacing="24.0">
                  <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="DS dãy trọ"
                         HBox.hgrow="ALWAYS"/>
                  <HBox alignment="CENTER_RIGHT" spacing="24.0" HBox.hgrow="ALWAYS">
                     <Button mnemonicParsing="false" onAction="#Button_ThemDayTroOnAction"
                             styleClass="button_add" stylesheets="@../styles/Style.css"
                             text="Thêm dãy mới"/>
                     <Button mnemonicParsing="false" onAction="#Button_SuaDayTroOnAction"
                             styleClass="button_edit" stylesheets="@../styles/Style.css"
                             text="Chỉnh sửa"/>
                     <Button mnemonicParsing="false" onAction="#Button_XoaDayTroOnAction"
                             styleClass="button_delete" stylesheets="@../styles/Style.css"
                             text="Xóa dãy"/>
                  </HBox>
               </HBox>
               <TableView prefHeight="550.0" stylesheets="@../styles/Style.css">
                  <columns>
                     <TableColumn prefWidth="100.0" text="Mã dãy"/>
                     <TableColumn prefWidth="100.0" text="Tên dãy"/>
                     <TableColumn prefWidth="70.0" text="SL Phòng"/>
                     <TableColumn prefWidth="300.0" text="Địa chỉ"/>
                  </columns>
                  <styleClass>
                     <String fx:value="column-header-background"/>
                     <String fx:value="corner"/>
                  </styleClass>
               </TableView>
            </VBox>
            <VBox spacing="12.0">
               <HBox alignment="CENTER_LEFT" spacing="24.0" VBox.vgrow="ALWAYS">
                  <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="DS phòng"
                         HBox.hgrow="ALWAYS"/>
                  <HBox alignment="CENTER_RIGHT" spacing="24.0" HBox.hgrow="ALWAYS">
                     <Button mnemonicParsing="false" onAction="#Button_ThemPhongTroOnAction"
                             styleClass="button_add" stylesheets="@../styles/Style.css"
                             text="Thêm phòng mới"/>
                     <Button mnemonicParsing="false" onAction="#Button_SuaPhongTroOnAction"
                             styleClass="button_edit" stylesheets="@../styles/Style.css"
                             text="Chỉnh sửa"/>
                     <Button mnemonicParsing="false" onAction="#Button_XoaPhongTroOnAction"
                             styleClass="button_delete" stylesheets="@../styles/Style.css"
                             text="Xóa phòng"/>
                  </HBox>
               </HBox>
               <TableView prefHeight="263.0" stylesheets="@../styles/Style.css">
                  <columns>
                     <TableColumn prefWidth="130.0" text="Mã phòng"/>
                     <TableColumn prefWidth="140.0" text="Tên Phòng"/>
                     <TableColumn prefWidth="100.0" text="Đã ở"/>
                     <TableColumn prefWidth="150.0" text="Giá phòng"/>
                  </columns>
               </TableView>
               <HBox alignment="CENTER_LEFT" spacing="24.0">
                  <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Thông tin phòng"
                         HBox.hgrow="ALWAYS"/>
                  <HBox alignment="CENTER_RIGHT" spacing="24.0" HBox.hgrow="ALWAYS">
                     <Button mnemonicParsing="false" onAction="#Button_ThemKhachThueOnAction"
                             styleClass="button_add" stylesheets="@../styles/Style.css"
                             text="Đăng ký"/>
                     <Button mnemonicParsing="false" onAction="#Button_SuaKhachThueOnAction"
                             styleClass="button_edit" stylesheets="@../styles/Style.css"
                             text="Chỉnh sửa"/>
                     <Button mnemonicParsing="false" onAction="#Button_XoaKhachThueOnAction"
                             styleClass="button_delete" stylesheets="@../styles/Style.css"
                             text="Hủy đăng ký"/>
                  </HBox>
               </HBox>
               <TableView prefHeight="238.0" stylesheets="@../styles/Style.css">
                  <columns>
                     <TableColumn prefWidth="135.0" text="Họ và tên"/>
                     <TableColumn prefWidth="115.0" text="CCCD"/>
                     <TableColumn prefWidth="70.0" text="Giới tính"/>
                     <TableColumn prefWidth="110.0" text="SĐT"/>
                     <TableColumn prefWidth="180.0" text="Quê Quán"/>
                     <TableColumn prefWidth="100.0" text="Ngày đăng ký"/>
                  </columns>
               </TableView>
            </VBox>
         </HBox>
      </VBox>
   </AnchorPane>
</ScrollPane>
