<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="GiaoDienThemDayTro" stylesheets="@../styles/Style.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.ThemDayTro_Controller">
   <VBox spacing="16.0">
      <padding>
         <Insets bottom="24.0" left="24.0" right="24.0" top="24.0" />
      </padding>
      <HBox>
         <Label styleClass="heading" stylesheets="@../styles/Style.css" text="Thêm dãy trọ" />
      </HBox>
      <HBox alignment="CENTER_LEFT">
         <Label prefWidth="150.0" text="Mã dãy trọ" />
         <TextField fx:id="TextField_MaDayTro" prefWidth="250.0" styleClass="textField" stylesheets="@../styles/Style.css" />
      </HBox>
      <HBox alignment="CENTER_LEFT">
         <Label prefWidth="150.0" text="Tên dãy trọ" />
         <TextField fx:id="TextField_TenDayTro" prefWidth="250.0" styleClass="textField" stylesheets="@../styles/Style.css" />
      </HBox>
      <HBox alignment="CENTER_LEFT">
         <Label prefWidth="150.0" text="Địa chỉ" />
         <TextField fx:id="TextField_DiaChi" prefWidth="250.0" styleClass="textField" stylesheets="@../styles/Style.css" />
      </HBox>
      <HBox alignment="CENTER_LEFT">
         <Label prefWidth="150.0" text="Số lượng phòng" />
         <TextField id="textField_slphong" fx:id="TextField_SLphong" editable="false" prefWidth="250.0" styleClass="textField" stylesheets="@../styles/Style.css" text="0" />
      </HBox>
      <HBox>
         <Label fx:id="error_ChuaNhapDayDuThongTin" styleClass="label_message_wrong" stylesheets="@../styles/Style.css" HBox.hgrow="ALWAYS" />
      </HBox>
      <HBox alignment="CENTER_RIGHT" spacing="24.0">
         <Button mnemonicParsing="false" onAction="#Button_ConfirmOnAction_DayTro" stylesheets="@../styles/Style.css" text="Xác nhận">
            <styleClass>
               <String fx:value="button_confirm" />
               <String fx:value="button_style" />
            </styleClass></Button>
         <Button mnemonicParsing="false" onAction="#Button_CancelOnAction_DayTro" stylesheets="@../styles/Style.css" text="Hủy">
            <styleClass>
               <String fx:value="button_cancel" />
               <String fx:value="button_style" />
            </styleClass></Button>
      </HBox>
   </VBox>
</AnchorPane>
